#!/bin/bash

THISDIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"

function link() {
    rm -rf ~/$1
    ln -s $THISDIR/$2 ~/$1
}

link .gitignore gitignore
link .gemrc gemrc
link .eslintrc eslintrc
link .zshrc zshrc
link .tmux.conf tmux.conf
link .gitconfig macos/gitconfig
link .bashrc macos/bashrc
link .bash_profile macos/bash_profile
link .grc .grc

# Kitty
mkdir -p ~/Library/Preferences/kitty
link Library/Preferences/kitty/kitty.conf kitty.conf

# XCode Themes
XCODE_THEMES=Library/Developer/Xcode/UserData/FontAndColorThemes
mkdir -p ~/$XCODE_THEMES
link $XCODE_THEMES/Meowgorithm.dvtcolortheme xcode/Meowgorithm.dvtcolortheme
link $XCODE_THEMES/MeowgorithmMorning.dvtcolortheme xcode/MeowgorithmMorning.dvtcolortheme

echo
echo Done.
echo
