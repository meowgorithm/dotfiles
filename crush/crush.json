{
    "$schema": "https://charm.land/crush.json",
    "mcp": {
        "github": {
            "type": "http",
            "url": "https://api.githubcopilot.com/mcp/",
            "headers": {
                "Authorization": "$(echo Bearer $GITHUB_TOKEN)"
            }
        }
    },
    "permissions": {
        "allowed_tools": [
            "fetch",
            "mcp_github_pull_request_read",
            "mcp_neocrush_editor_context",
            "view"
        ]
    }
}
